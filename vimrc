set nowrap nocompatible
filetype plugin indent on
syntax enable
set nu display=lastline,uhex
set bs=eol,start,indent

" Autoindent
set autoindent

" expand tabs
set expandtab
set smarttab

" set 2-spc tabs
set shiftwidth=2
set softtabstop=3

" enable mouse?
set mouse=a

"enable linenumbers
set number

